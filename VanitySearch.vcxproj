  -->
  <PropertyGroup Label="CudaDefaults">
    <CudaToolkitVersion Condition="'$(CudaToolkitVersion)' == ''">13.1</CudaToolkitVersion>
    <!-- Some environments set CudaToolkitVersion like "v13.1". Normalize to "13.1" for file names. -->
    <CudaToolkitVersionNoV Condition="'$(CudaToolkitVersionNoV)' == ''">$(CudaToolkitVersion)</CudaToolkitVersionNoV>
    <CudaToolkitVersionNoV Condition="$([System.String]::Copy('$(CudaToolkitVersion)').StartsWith('v'))">$([System.String]::Copy('$(CudaToolkitVersion)').Substring(1))</CudaToolkitVersionNoV>
    <CudaToolkitVersionNoV Condition="$([System.String]::Copy('$(CudaToolkitVersion)').StartsWith('V'))">$([System.String]::Copy('$(CudaToolkitVersion)').Substring(1))</CudaToolkitVersionNoV>
    <CudaToolkitDir Condition="'$(CudaToolkitDir)' == '' and '$(CUDA_PATH)' != ''">$(CUDA_PATH)</CudaToolkitDir>
    <CudaToolkitCustomDir Condition="'$(CudaToolkitCustomDir)' == '' and '$(CUDA_PATH)' != ''">$(CUDA_PATH)</CudaToolkitCustomDir>
    <CudaToolkitDir Condition="'$(CudaToolkitDir)' == ''">C:\Program Files\NVIDIA GPU Computing Toolkit\CUDA\v13.1</CudaToolkitDir>
    <CudaToolkitCustomDir Condition="'$(CudaToolkitCustomDir)' == ''">C:\Program Files\NVIDIA GPU Computing Toolkit\CUDA\v13.1</CudaToolkitCustomDir>

