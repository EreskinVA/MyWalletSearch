  <PropertyGroup>
    <!--
      CUDA 13.1 больше не поддерживает Pascal (sm_61), поэтому compute_61/sm_61 вызывает:
        nvcc fatal : Unsupported gpu architecture 'compute_61'

      По умолчанию собираем под распространённые поколения:
      - sm_75 (RTX 20 / Turing)
      - sm_86 (RTX 30 / Ampere)
      - sm_89 (RTX 40 / Ada)

      Можно переопределить при сборке:
        MSBuild ... /p:CudaCodeGeneration="compute_86,sm_86"
      или задать одну/несколько через ';':
        /p:CudaCodeGeneration="compute_75,sm_75;compute_86,sm_86"
    -->
    <!--
      Упрощённый ввод без запятых с командной строки:
        /p:CudaSM=61   -> CudaCodeGeneration="compute_61,sm_61"
      (MSBuild CLI умеет некорректно парсить запятую в /p:...=..., поэтому безопаснее передавать CudaSM)
    -->
    <CudaSM Condition="'$(CudaSM)' == '' and '$(CudaToolkitVersionNoV)' == '11.8'">61</CudaSM>
    <CudaCodeGeneration Condition="'$(CudaCodeGeneration)' == '' and '$(CudaSM)' != ''">compute_$(CudaSM),sm_$(CudaSM)</CudaCodeGeneration>
    <CudaCodeGeneration Condition="'$(CudaCodeGeneration)' == ''">compute_75,sm_75;compute_86,sm_86;compute_89,sm_89</CudaCodeGeneration>
  </PropertyGroup>
